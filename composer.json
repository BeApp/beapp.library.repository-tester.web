{
    "name": "beapp/repository-tester",
    "type": "library",
    "description": "Testing library for Symfony repositories",
    "keywords": ["doctrine", "symfony", "repository", "test"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tanguy Reviller",
            "email": "t.reviller@beapp.fr"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "beapp/doctrine-pagination": "^1.0",
        "doctrine/orm": "^2.6",
        "phpunit/phpunit": "^8.2",
        "symfony/symfony": "^3.4"
    },
    "require-dev": {
        "symplify/monorepo-builder": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Beapp\\RepositoryTesterBundle\\": "packages/Core/",
            "Beapp\\RepositoryTesterBundle\\Pageable\\": "packages/Pageable/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beapp\\RepositoryTesterBundle\\": "packages/Core/Tests",
            "Beapp\\RepositoryTesterBundle\\Pageable\\": "tests/Pageable"
        }
    },
    "replace": {
        "beapp/repository-tester-bundle": "self.version",
        "beapp/repository-tester-pageable": "self.version"
    },
    "config": {
        "sort-packages": true
    }
}
